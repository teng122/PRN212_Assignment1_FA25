<Window x:Class="WPFApp.Views.RoomTypeManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:WPFApp.ViewModels"
        Title="Room Type Management" Height="450" Width="700">
    <Window.DataContext>
        <viewModels:RoomTypeViewModel/>
    </Window.DataContext>

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10">
            <Button Content="Add" Command="{Binding AddCommand}" Margin="0 0 5 0"/>
            <Button Content="Update" Command="{Binding UpdateCommand}" Margin="0 0 5 0"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}" />
        </StackPanel>

        <DataGrid ItemsSource="{Binding RoomTypes}" SelectedItem="{Binding SelectedRoomType}"
                  AutoGenerateColumns="False" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding RoomTypeID}" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="Tên loại phòng" Binding="{Binding RoomTypeName}" Width="150"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding TypeDescription}" Width="250"/>
                <DataGridTextColumn Header="Ghi chú" Binding="{Binding TypeNote}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
