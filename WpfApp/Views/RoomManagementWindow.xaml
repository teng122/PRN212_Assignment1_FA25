<Window x:Class="WPFApp.Views.RoomManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:WPFApp.ViewModels"
        Title="Room Management" Height="500" Width="750">
    <Window.DataContext>
        <viewModels:RoomViewModel/>
    </Window.DataContext>

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10">
            <Button Content="Add" Command="{Binding AddCommand}" Margin="0 0 5 0"/>
            <Button Content="Update" Command="{Binding UpdateCommand}" Margin="0 0 5 0"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}" Margin="0 0 5 0"/>
            <Button Content="Sort by Price" Command="{Binding SortCommand}" Margin="10 0 0 0"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Rooms}" SelectedItem="{Binding SelectedRoom}"
                  AutoGenerateColumns="False" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding RoomID}" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="Tên phòng" Binding="{Binding RoomNumber}" Width="100"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding RoomPrice}" Width="100"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding RoomStatus}" Width="80"/>
                <DataGridTextColumn Header="Loại phòng" Binding="{Binding RoomTypeID}" Width="100"/>
                <DataGridTextColumn Header="Ghi chú" Binding="{Binding RoomDescription}" Width="250"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
