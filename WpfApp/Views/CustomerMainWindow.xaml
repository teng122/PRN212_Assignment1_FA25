<!-- File: Views/CustomerMainWindow.xaml -->
<Window x:Class="HotelManager.Views.CustomerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FU Mini Hotel System - Customer Portal" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="FU Mini Hotel System - Customer Portal" 
                              FontSize="20" FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock x:Name="txtWelcome" 
                              FontSize="16" 
                              Foreground="White" 
                              Margin="20,0,0,0"/>
                </StackPanel>
                <Button Content="Logout" Width="100" Height="35"
                       HorizontalAlignment="Right"
                       Click="btnLogout_Click"
                       Background="White" Foreground="#2196F3"/>
            </Grid>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="My Profile" FontSize="14" Padding="10,5">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Full Name:" 
                              FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,10"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtFullName" 
                            Height="35" Margin="10"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Telephone:" 
                              FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,10"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtTelephone" 
                            Height="35" Margin="10"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Email:" 
                              FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,10"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtEmail" 
                            Height="35" IsReadOnly="True" Background="#F0F0F0" Margin="10"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Birthday:" 
                              FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,10"/>
                    <DatePicker Grid.Row="3" Grid.Column="1" x:Name="dpBirthday" 
                               Height="35" Margin="10"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Password:" 
                              FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,10"/>
                    <PasswordBox Grid.Row="4" Grid.Column="1" x:Name="txtPassword" 
                                Height="35" Margin="10"/>

                    <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" 
                               HorizontalAlignment="Right" Margin="10,20,10,10">
                        <Button Content="Update Profile" Width="150" Height="40"
                               Background="#4CAF50" Foreground="White"
                               FontWeight="SemiBold"
                               Click="btnUpdateProfile_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Booking History" FontSize="14" Padding="10,5">
                <Grid>
                    <TextBlock Text="Booking history feature will be implemented here."
                              FontSize="16" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"
                              Foreground="Gray"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>