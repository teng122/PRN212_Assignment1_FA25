<Window x:Class="WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Hotel System" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Mini Hotel Management"
                   FontSize="20" FontWeight="Bold"
                   Margin="0 0 0 20"/>
        <Button Content="Quản lý Khách hàng" Width="200" Margin="0 5"
                Click="OpenCustomer_Click"/>
        <Button Content="Quản lý Phòng" Width="200" Margin="0 5"
                Click="OpenRoom_Click"/>
        <Button Content="Quản lý Loại phòng" Width="200" Margin="0 5"
                Click="OpenRoomType_Click"/>
    </StackPanel>
</Window>
